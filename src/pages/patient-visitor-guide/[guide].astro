---
// File: src/pages/guides/[guide].astro

import Guides from "../../index-page/patient-visitor-guide/guides"; // adjust to actual path
import Main from "../../layouts/main.astro"; // make sure this exists and is imported
import PatientVisitor from "../../layouts/patient-visitor-guide.astro";

export async function getStaticPaths() {
  return [
    { params: { guide: "preparing-your-stay" } },
    { params: { guide: "during-your-stay" } },
    { params: { guide: "visitation" } },
    { params: { guide: "discharge-follow-up" } },
    { params: { guide: "faqs" } },
  ];
}

const { guide } = Astro.params;
---

<Main>
  <PatientVisitor>
    <Guides guide={guide} client:load />
  </PatientVisitor>
</Main>
